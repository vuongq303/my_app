<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Bootstrap 5 Slideshow (Clickable thumbnails + Modal Carousel)</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        padding: 2rem;
      }
      .thumb {
        cursor: pointer;
        overflow: hidden;
      }
      .thumb img {
        transition: transform 0.3s;
      }
      .thumb:hover img {
        transform: scale(1.06);
      }
      .modal-img {
        width: 100%;
        height: 70vh;
        object-fit: contain;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1 class="mb-4">Slide show báº±ng Bootstrap 5</h1>
      <div class="row g-3">
        <div class="col-6 col-sm-4 col-md-3">
          <div class="card thumb" data-index="0">
            <img
              src="https://picsum.photos/id/1018/600/400"
              class="card-img-top"
              alt="Image 1"
            />
          </div>
        </div>

        <div class="col-6 col-sm-4 col-md-3">
          <div class="card thumb" data-index="1">
            <img
              src="https://picsum.photos/id/1025/600/400"
              class="card-img-top"
              alt="Image 2"
            />
          </div>
        </div>

        <div class="col-6 col-sm-4 col-md-3">
          <div class="card thumb" data-index="2">
            <img
              src="https://picsum.photos/id/1035/600/400"
              class="card-img-top"
              alt="Image 3"
            />
          </div>
        </div>

        <div class="col-6 col-sm-4 col-md-3">
          <div class="card thumb" data-index="3">
            <img
              src="https://picsum.photos/id/1043/600/400"
              class="card-img-top"
              alt="Image 4"
            />
          </div>
        </div>

        <div class="col-6 col-sm-4 col-md-3">
          <div class="card thumb" data-index="4">
            <img
              src="https://picsum.photos/id/1052/600/400"
              class="card-img-top"
              alt="Image 5"
            />
          </div>
        </div>

        <div class="col-6 col-sm-4 col-md-3">
          <div class="card thumb" data-index="5">
            <img
              src="https://picsum.photos/id/1062/600/400"
              class="card-img-top"
              alt="Image 6"
            />
          </div>
        </div>
      </div>

      <div
        class="modal fade"
        id="galleryModal"
        tabindex="-1"
        aria-hidden="true"
      >
        <div class="modal-dialog modal-xl modal-dialog-centered">
          <div class="modal-content bg-transparent border-0">
            <div class="modal-body p-0">
              <div
                id="galleryCarousel"
                class="carousel slide"
                data-bs-ride="false"
              >
                <div class="carousel-inner">
                  <!-- Slide 0 -->
                  <div class="carousel-item active">
                    <img
                      src="https://picsum.photos/id/1018/1200/800"
                      class="d-block w-100 modal-img"
                      alt="Image 1"
                    />
                  </div>
                  <!-- Slide 1 -->
                  <div class="carousel-item">
                    <img
                      src="https://picsum.photos/id/1025/1200/800"
                      class="d-block w-100 modal-img"
                      alt="Image 2"
                    />
                  </div>
                  <!-- Slide 2 -->
                  <div class="carousel-item">
                    <img
                      src="https://picsum.photos/id/1035/1200/800"
                      class="d-block w-100 modal-img"
                      alt="Image 3"
                    />
                  </div>
                  <!-- Slide 3 -->
                  <div class="carousel-item">
                    <img
                      src="https://picsum.photos/id/1043/1200/800"
                      class="d-block w-100 modal-img"
                      alt="Image 4"
                    />
                  </div>
                  <!-- Slide 4 -->
                  <div class="carousel-item">
                    <img
                      src="https://picsum.photos/id/1052/1200/800"
                      class="d-block w-100 modal-img"
                      alt="Image 5"
                    />
                  </div>
                  <!-- Slide 5 -->
                  <div class="carousel-item">
                    <img
                      src="https://picsum.photos/id/1062/1200/800"
                      class="d-block w-100 modal-img"
                      alt="Image 6"
                    />
                  </div>
                </div>

                <!-- Controls -->
                <button
                  class="carousel-control-prev"
                  type="button"
                  data-bs-target="#galleryCarousel"
                  data-bs-slide="prev"
                >
                  <span
                    class="carousel-control-prev-icon"
                    aria-hidden="true"
                  ></span>
                  <span class="visually-hidden">Previous</span>
                </button>
                <button
                  class="carousel-control-next"
                  type="button"
                  data-bs-target="#galleryCarousel"
                  data-bs-slide="next"
                >
                  <span
                    class="carousel-control-next-icon"
                    aria-hidden="true"
                  ></span>
                  <span class="visually-hidden">Next</span>
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      (function () {
        const thumbs = document.querySelectorAll(".thumb");
        const galleryModalEl = document.getElementById("galleryModal");
        const bsModal = new bootstrap.Modal(galleryModalEl);
        const carouselEl = document.getElementById("galleryCarousel");
        const bsCarousel = bootstrap.Carousel.getOrCreateInstance(carouselEl, {
          ride: false,
        });

        thumbs.forEach((t) => {
          t.addEventListener("click", () => {
            const index = Number(t.dataset.index || 0);
            bsCarousel.to(index);
            bsModal.show();
          });
        });

        galleryModalEl.addEventListener("shown.bs.modal", () => {
          carouselEl.focus();
        });
      })();
    </script>
  </body>
</html>
